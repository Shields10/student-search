<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- Servlet configuration -->
    <servlet>
        <servlet-name>StudentSearchServlet</servlet-name>
        <servlet-class>com.studentsearch.servlet.StudentSearchServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ViewResultServlet</servlet-name>
        <servlet-class>com.studentsearch.servlet.ViewResultServlet</servlet-class>
    </servlet>

    <!-- Servlet mapping -->
    <servlet-mapping>
        <servlet-name>StudentSearchServlet</servlet-name>
        <url-pattern>/StudentSearchServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ViewResultServlet</servlet-name>
        <url-pattern>/ViewResultServlet</url-pattern>
    </servlet-mapping>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>search.jsp</welcome-file>
    </welcome-file-list>
</web-app>
